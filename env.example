# StudyGapAI Backend Environment Variables
# Copy this file to .env and set your actual values
# DO NOT commit .env to version control!

# Flask Configuration
FLASK_ENV=production
FLASK_APP=backend.app:app
FLASK_DEBUG=0
SECRET_KEY=your-super-secret-key-change-this-in-production
APP_NAME=StudyGapAI Backend
APP_VERSION=0.1.0

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here  # Required for backend operations (bypasses RLS)
USE_IN_MEMORY_DB=false

# Google Gemini AI Configuration (AI/SE Enhanced)
# You can use either GOOGLE_API_KEY or GEMINI_API_KEY (both work)
GOOGLE_API_KEY=your-gemini-api-key-here
# GEMINI_API_KEY=your-gemini-api-key-here  # Alternative variable name
AI_MODEL_NAME=gemini-2.0-flash
AI_MOCK=false
# Set AI_MOCK=true for testing without API key
# Set AI_MOCK=false for production with real Gemini API

# CORS Configuration (for frontend)
# Separate multiple origins with commas
# Development: http://localhost:5173 (Vite default port)
# Production: https://your-frontend-domain.vercel.app
# Multiple origins: https://domain1.com,https://domain2.com
# Allow all (NOT recommended for production): *
CORS_ORIGINS=http://localhost:5173

# Testing
TESTING=false

# Python Version (for Render - optional, runtime.txt handles this)
# PYTHON_VERSION=3.11.9

# Render will provide this automatically - DO NOT SET MANUALLY
# PORT=8000